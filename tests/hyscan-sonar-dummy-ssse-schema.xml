<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="hyscan-sonar-dummy-ssse">

  <schema id="root">
    <key id="version" name="Version" type="integer" flags="readonly">
      <range min="20160400" max="20160400" step="0"/>
      <description>Sonar schema version</description>
      <default>20160400</default>
    </key>
    <node id="sensors">
      <node id="virtual.1" schema="virtual"/>
      <node id="virtual.2" schema="virtual"/>
      <node id="virtual.3" schema="virtual"/>
      <node id="virtual.4" schema="virtual"/>
      <node id="virtual.5" schema="virtual"/>
      <node id="ip.1" schema="ip"/>
      <node id="ip.2" schema="ip"/>
      <node id="ip.3" schema="ip"/>
      <node id="ip.4" schema="ip"/>
      <node id="ip.5" schema="ip"/>
      <node id="rs232.1" schema="rs232"/>
      <node id="rs232.2" schema="rs232"/>
      <node id="rs232.3" schema="rs232"/>
      <node id="rs232.4" schema="rs232"/>
      <node id="rs232.5" schema="rs232"/>
    </node>
    <node id="control" schema="control"/>
  </schema>

  <schema id="virtual">
    <key id="type" name="Type" enum="port-type" flags="readonly">
      <description>Port type</description>
      <default>101</default>
    </key>
    <key id="id" name="ID" type="integer">
      <range min="0" max="0" step="0"/>
      <description>Port ID</description>
    </key>
    <key id="name" name="Name" type="string">
      <description>Port name</description>
      <default>Virtual</default>
    </key>
    <key id="exist" name="Exist" type="boolean" flags="readonly">
      <description>Port presence</description>
      <default>true</default>
    </key>
    <key id="status" name="Status" enum="port-status">
      <description>Port status</description>
      <default>101</default>
    </key>
    <key id="enable" name="Enable" type="boolean">
      <description>Port activity</description>
      <default>false</default>
    </key>
    <key id="protocol" name="Protocol" enum="port-protocol" flags="readonly">
      <description>Port protocol</description>
      <default>102</default>
    </key>
  </schema>

  <schema id="ip">
    <key id="type" name="Type" enum="port-type" flags="readonly">
      <description>Port type</description>
      <default>102</default>
    </key>
    <key id="id" name="ID" type="integer">
      <range min="0" max="0" step="0"/>
      <description>Port ID</description>
    </key>
    <key id="name" name="Name" type="string">
      <description>Port name</description>
      <default>IP</default>
    </key>
    <key id="exist" name="Exist" type="boolean" flags="readonly">
      <description>Port presence</description>
      <default>true</default>
    </key>
    <key id="status" name="Status" enum="port-status">
      <description>Port status</description>
      <default>101</default>
    </key>
    <key id="enable" name="Enable" type="boolean">
      <description>Port activity</description>
      <default>false</default>
    </key>
    <key id="protocol" name="Protocol" enum="port-protocol">
      <description>Port protocol</description>
      <default>102</default>
    </key>
    <key id="address" name="Address" enum="ip-address">
      <description>Local IP address</description>
      <default>0</default>
    </key>
    <key id="port" name="Port" type="integer">
      <description>UDP port number</description>
      <range min="1024" max="65535"/>
      <default>10000</default>
    </key>
  </schema>

  <schema id="rs232">
    <key id="type" name="Type" enum="port-type" flags="readonly">
      <description>Port type</description>
      <default>103</default>
    </key>
    <key id="id" name="ID" type="integer">
      <range min="0" max="0" step="0"/>
      <description>Port ID</description>
    </key>
    <key id="name" name="Name" type="string">
      <description>Port name</description>
      <default>RS232</default>
    </key>
    <key id="exist" name="Exist" type="boolean" flags="readonly">
      <description>Port presence</description>
      <default>true</default>
    </key>
    <key id="status" name="Status" enum="port-status">
      <description>Port status</description>
      <default>101</default>
    </key>
    <key id="enable" name="Enable" type="boolean">
      <description>Port activity</description>
      <default>false</default>
    </key>
    <key id="protocol" name="Protocol" enum="port-protocol">
      <description>Port protocol</description>
      <default>102</default>
    </key>
    <key id="port" name="Port" enum="rs232-port">
      <description>Serial port name</description>
      <default>0</default>
    </key>
    <key id="speed" name="Speed" enum="rs232-speed">
      <description>Serial port speed</description>
      <default>0</default>
    </key>
  </schema>

  <schema id="control">
    <key id="state" name="State" enum="sonar-state">
      <description>Sonar state</description>
      <default>0</default>
    </key>
  </schema>

  <enum id="port-type">
    <value name="Virtual" value="101">
      <description>Virtual port</description>
    </value>
    <value name="IP" value="102">
      <description>IP port</description>
    </value>
    <value name="RS232" value="103">
      <description>RS232 port</description>
    </value>
  </enum>

  <enum id="port-protocol">
    <value name="SAS" value="101">
      <description>SAS protocol</description>
    </value>
    <value name="NMEA 0183" value="102">
      <description>NMEA 0183 protocol</description>
    </value>
  </enum>

  <enum id="port-status">
    <value name="Disbaled" value="101">
      <description>Disabled</description>
    </value>
    <value name="OK" value="102">
      <description>OK</description>
    </value>
    <value name="Warning" value="103">
      <description>Warning</description>
    </value>
    <value name="Error" value="104">
      <description>Error</description>
    </value>
  </enum>

  <enum id="ip-address">
    <value name="Off" value="0">
      <description>Off</description>
    </value>
    <value name="local" value="1">
      <description>Localhost address</description>
    </value>
  </enum>

  <enum id="rs232-port">
    <value name="Off" value="0">
      <description>Off</description>
    </value>
    <value name="serial 1" value="1">
      <description>Serial port 1</description>
    </value>
    <value name="serial 2" value="2">
      <description>Serial port 2</description>
    </value>
    <value name="serial 3" value="3">
      <description>Serial port 3</description>
    </value>
    <value name="serial 4" value="4">
      <description>Serial port 4</description>
    </value>
  </enum>

  <enum id="rs232-speed">
    <value name="Off" value="0">
      <description>Off</description>
    </value>
    <value name="1200" value="1200">
      <description>1200 baud</description>
    </value>
    <value name="2400" value="2400">
      <description>2400 baud</description>
    </value>
    <value name="4900" value="4800">
      <description>4800 baud</description>
    </value>
    <value name="9600" value="9600">
      <description>9600 baud</description>
    </value>
    <value name="19200" value="19200">
      <description>19200 baud</description>
    </value>
    <value name="38400" value="38400">
      <description>38400 baud</description>
    </value>
    <value name="57600" value="57600">
      <description>57600 baud</description>
    </value>
    <value name="115200" value="115200">
      <description>115200 baud</description>
    </value>
  </enum>

  <enum id="sonar-state">
    <value name="Stopped" value="0">
      <description>Stopper</description>
    </value>
    <value name="Running" value="1">
      <description>Running</description>
    </value>
  </enum>

</schemalist>
